<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvListarIncidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sincronizado"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorSilver"
                    android:textSize="10sp"/>
                <ImageView
                    android:id="@+id/imgListarIncidenciaSincronizado"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_cloud_done_blue_36dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FAFAFA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvListarIncidenciaOrdenCodigoDes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Código de cliente"
                        android:textColor="@color/list_item_title"
                        android:textSize="@dimen/cardviewHintTextSize" />

                    <TextView
                        android:id="@+id/tvListarIncidenciaOrdenMotivoDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Motivo"
                        android:textColor="@color/list_item_title"
                        android:textSize="@dimen/cardviewHintTextSize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvListarIncidenciaOrdenCodigoCli"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/cardviewTitleTextSize" />

                    <TextView
                        android:id="@+id/tvListarIncidenciaOrdenMotivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/cardviewTitleTextSize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvListarIncidenciaOrdenNombreDes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nombre o razón social"
                        android:textColor="@color/list_item_title"
                        android:textSize="@dimen/cardviewHintTextSize" />

                    <TextView
                        android:id="@+id/tvListarIncidenciaOrdenFechaDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha de registro"
                        android:textColor="@color/list_item_title"
                        android:textSize="@dimen/cardviewHintTextSize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvListarIncidenciaOrdenNombre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/cardviewTitleTextSize" />

                    <TextView
                        android:id="@+id/tvListarIncidenciaOrdenFecha"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>