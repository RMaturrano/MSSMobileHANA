<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvListarEntregaDetalleContenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FAFAFA">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Código de artículo"
                        android:textColor="@color/list_item_title"
                        android:textSize="@dimen/cardviewHintTextSize"/>

                    <TextView
                        android:id="@+id/tvListarEntregaContenidoCodigo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/cardviewTitleTextSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descripción"
                        android:textColor="@color/list_item_title"
                        android:textSize="@dimen/cardviewHintTextSize" />

                    <TextView
                        android:id="@+id/tvListarEntregaContenidoDescripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/cardviewTitleTextSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Almacén"
                        android:textColor="@color/list_item_title"
                        android:textSize="@dimen/cardviewHintTextSize" />

                    <TextView
                        android:id="@+id/tvListarEntregaContenidoAlmacen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/cardviewTitleTextSize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cantidad"
                        android:gravity="right"
                        android:textColor="@color/list_item_title"
                        android:textSize="@dimen/cardviewHintTextSize"/>

                    <TextView
                        android:id="@+id/tvListarEntregaContenidoCantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/cardviewTitleTextSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disponible"
                        android:textColor="@color/list_item_title"
                        android:textSize="@dimen/cardviewHintTextSize" />

                    <TextView
                        android:id="@+id/tvListarEntregaContenidoDispon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/cardviewTitleTextSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precio unitario"
                        android:textColor="@color/list_item_title"
                        android:textSize="@dimen/cardviewHintTextSize" />

                    <TextView
                        android:id="@+id/tvListarEntregaContenidoPrecio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/cardviewTitleTextSize" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabVerLote"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:elevation="1dp"
                    android:src="@drawable/ic_details_white_36dp"
                    app:backgroundTint="@color/floattingButtonColor"
                    app:fabSize="mini"
                    app:pressedTranslationZ="12dp"
                    app:rippleColor="@color/floattingButtonColorPressed"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>