<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dip">
 
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content"
        android:textSize="14sp" 
        android:text="TextView"
        android:textColor="#2196f3"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/txtViewTitleRight"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txtViewTitle"
        android:layout_marginLeft="12dip">
    </TextView>
 
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:id="@+id/txtViewDescription"
        android:layout_below="@+id/txtViewTitle"
        android:layout_marginLeft="12dip">
    </TextView>
    
    
     <ImageView
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:id="@+id/imgViewLogo"
        android:src="@drawable/ic_keyboard_arrow_right_black_36dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:gravity="right"
        android:scaleType="center">
    </ImageView>
    
     
     <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content"
        android:textSize="17sp" 
        android:text="TextView"
        android:layout_width="wrap_content"
        android:id="@+id/txtViewTitleRight"
        android:layout_marginLeft="12dip"
        android:layout_toLeftOf="@+id/imgViewLogo">
    </TextView>
 
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:id="@+id/txtViewDescriptionRight"
        android:layout_below="@+id/txtViewTitleRight"
        android:layout_marginLeft="12dip"
        android:layout_toLeftOf="@+id/imgViewLogo">
    </TextView>
     
 
</RelativeLayout>