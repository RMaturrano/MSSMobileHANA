        </SwitchPreference>	        -->
        
        <EditTextPreference
            android:key="idDispositivo"
            android:title="Id de dispositivo"/>

        <CheckBoxPreference
            android:key="controlSincManual"
            android:title="Controlar sincronización manual"
            android:summaryOn="Habilitado"
            android:summaryOff="Deshabilitado"
            android:defaultValue="true"/>
        
